<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CheckMate.Views.Checkin">
    <ContentPage.Content>
<ContentView>
    <Grid VerticalOptions="Center" HorizontalOptions="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <Label Text="Check Into Class: " HorizontalOptions="Center"
               Grid.Column="1" Grid.Row="0"/>
        <Label x:Name="dateLabel" Text="date" HorizontalOptions="End"
               Grid.Column="2" Grid.Row="0"/>

         <Label Text="Primary Technique: " HorizontalOptions="Center"
               Grid.Column="1" Grid.Row="1"/>
        <Label x:Name="techLabel" Text="tech" HorizontalOptions="End"
               Grid.Column="2" Grid.Row="1"/>

        <Button x:Name="checkInButton" Grid.Column="1" Grid.Row="2"
                HorizontalOptions="Center" VerticalOptions="Center"
                Clicked="checkInButton_Clicked"
                BorderColor="Black" BorderWidth="1" Padding="10"
                Text="Check In"/>
    </Grid>

</ContentView>
    </ContentPage.Content>
</ContentPage>
